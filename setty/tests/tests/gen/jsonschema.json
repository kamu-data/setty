{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MyConfig",
  "type": "object",
  "properties": {
    "database": {
      "description": "Database configuration",
      "$ref": "#/$defs/DatabaseConfig",
      "default": {
        "database_path": ".kamu/db.sqlite",
        "kind": "Sqlite"
      }
    },
    "encryption": {
      "description": "Optional encryption",
      "anyOf": [
        {
          "$ref": "#/$defs/EncryptionConfig"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "$defs": {
    "DatabaseConfig": {
      "oneOf": [
        {
          "description": "Sqlite driver",
          "type": "object",
          "properties": {
            "database_path": {
              "description": "Path to the database file",
              "type": "string",
              "default": ".kamu/db.sqlite"
            },
            "kind": {
              "type": "string",
              "const": "Sqlite"
            }
          },
          "additionalProperties": false,
          "required": [
            "kind"
          ]
        },
        {
          "description": "Postgres driver",
          "type": "object",
          "properties": {
            "host": {
              "description": "Host name",
              "type": "string",
              "default": "localhost"
            },
            "kind": {
              "type": "string",
              "const": "Postgres"
            },
            "schema_name": {
              "description": "Name of the schema",
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "kind",
            "schema_name"
          ]
        }
      ]
    },
    "EncryptionAlgo": {
      "type": "string",
      "enum": [
        "Aes",
        "Rsa"
      ]
    },
    "EncryptionConfig": {
      "type": "object",
      "properties": {
        "algo": {
          "description": "Encryption algorythm",
          "$ref": "#/$defs/EncryptionAlgo",
          "default": "Aes"
        },
        "key": {
          "description": "Encryption key",
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "key"
      ]
    }
  }
}